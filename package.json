{
  "name": "fullstack-portfolio",
  "version": "1.0.0",
  "description": "Portfolio website with React frontend and Node.js backend",
  "author": "Ankit Kumar Verma",
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "install-client": "cd frontend && npm install",
    "install-server": "cd backend && npm install",
    "install-all": "npm-run-all --parallel install-client install-server",
    "dev": "npm-run-all --parallel dev-server dev-client",
    "dev-server": "cd backend && npm start",
    "dev-client": "cd frontend && npm start",
    "heroku-postbuild": "cd frontend && npm install && npm run build",
    "start": "cd backend && npm start"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
